<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:fragmentActivity=".deprecate.deprecate_SettingsActivity">

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/myAdsId"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:focusableInTouchMode="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/catalog_text"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    android:layout_marginLeft="25dp"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:gravity="center_vertical"
                    android:text="@string/my_ads"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/myAdsId"
                android:background="#dededede" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/myProfileId"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/myAdsId"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <!--
                                <ImageView
                                    android:layout_width="?android:attr/listPreferredItemHeight"
                                    android:layout_height="?android:attr/listPreferredItemHeight"
                                    android:src="@drawable/vector_drawable_ic_accessibility_black___px" />
                -->
                <TextView
                    android:id="@+id/header_title_4"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:gravity="center_vertical"
                    android:text="@string/my_profile_settings"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/myProfileId"
                android:background="#dededede" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/myBlacklistId"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/myProfileId"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <!--
                                <ImageView
                                    android:layout_width="?android:attr/listPreferredItemHeight"
                                    android:layout_height="?android:attr/listPreferredItemHeight"
                                    android:src="@drawable/vector_drawable_ic_featured_play_list_black___px" />
                -->
                <TextView
                    android:id="@+id/header_title_3"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    android:layout_marginLeft="25dp"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:gravity="center_vertical"
                    android:text="@string/my_blacklist"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/myBlacklistId"
                android:background="#dededede" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/support"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/myBlacklistId"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <!--
                                <ImageView
                                    android:layout_width="?android:attr/listPreferredItemHeight"
                                    android:layout_height="?android:attr/listPreferredItemHeight"
                                    android:src="@drawable/vector_drawable_ic_supervisor_account_black___px" />
                -->
                <TextView
                    android:id="@+id/header_title_5"
                    android:layout_width="wrap_content"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_vertical"
                    android:text="@string/support"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/support"
                android:background="#dededede" />
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/logOut"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/support"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <!--
                                <ImageView
                                    android:layout_width="?android:attr/listPreferredItemHeight"
                                    android:layout_height="?android:attr/listPreferredItemHeight"
                                    android:src="@drawable/vector_drawable_ic_reply_black___px" />
                -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_vertical"
                    android:text="@string/logout_text"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/logOut"
                android:background="#dededede" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
